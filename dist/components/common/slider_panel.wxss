.slider-panel-cover { width: 100%; height: 100%; position: fixed; top: 0; background-color: black; -webkit-filter: opacity(0.6); z-index: 100000; }

.slider-panel-box { position: fixed; display: flex; flex-direction: column; bottom: 0; width: 100%; z-index: 100000; background-color: #F8F8F8; transform: translateY(150%); transition: all 0.4s ease; padding-bottom: 20rpx; overflow-y: scroll; }

.slider-panel-box .header-box { text-align: center; padding: 30rpx 0 10rpx 0; }

.slider-panel-box .header-box .title-box view { font-size: 30rpx; color: #A3A3A3; }

.slider-panel-box .header-box .close-box { width: 100rpx; position: absolute; right: 10rpx; top: 30rpx; }

.slider-panel-box .content-box { max-height: 750rpx; }

.btn-box { padding-top: 20rpx; }

.btn-box view { background-color: white; border-style: solid; border-width: 1px; border-radius: 5px; width: 250rpx; height: 70rpx; }

.btn-box view text { font-size: 32rpx; }

.btn-box .btn-primary { border-color: #1296DB; }

.btn-box .btn-primary text { color: #1296DB; }

.btn-box .btn-back { border-color: #A3A3A3; }

.btn-box .btn-back text { color: #A3A3A3; }

.slider-panel-show { transform: translateY(0); }

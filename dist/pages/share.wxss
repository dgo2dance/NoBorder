.containers { position: fixed; height: 100%; width: 100%; display: flex; justify-content: flex-start; flex-direction: column; /* .bg-blur { float: left; width: 100%; background-repeat: no-repeat; background-position: center; background-size: cover; -webkit-filter: blur(2px); -moz-filter: blur(2px); -o-filter: blur(2px); -ms-filter: blur(2px); filter: blur(2px); } */ background-color: #ffffff; }

.containers .head { margin: 30rpx 0; width: 100%; text-align: center; font-size: 35rpx; }

.containers .content { height: 320px; width: 100%; background-color: #ffffff; text-align: center; display: flex; justify-content: center; }

.containers .photo-box { height: 320px; width: 80%; background-color: #111111; background-size: 420px; text-align: center; }

.containers .photo-box-img { height: 320px; width: 100%; background-color: 000000; background-size: 420px; }

.containers .btn { position: absolute; text-align: center; margin-top: 300rpx; }

.containers .photo-btn { height: 75px; width: 75px; }

.containers .item { display: flex; height: 100%; width: 100%; align-items: center; /*垂直居中*/ }

.containers .bottom { width: 100%; background-color: #ffffff; text-align: center; display: flex; justify-content: center; }

.containers .confirm { display: flex; justify-content: center; bottom: 160rpx; width: 80%; align-self: flex-end; position: fixed; }

.containers .title { font-size: 30rpx; }

.containers .button { font-size: 36rpx; height: 95rpx; line-height: 95rpx; text-align: center; margin: 0 auto; -moz-border-radius: 10rpx; -webkit-border-radius: 10rpx; border-radius: 10rpx; }

.containers .circle { font-size: 36rpx; height: 95rpx; line-height: 95rpx; text-align: center; margin: 0 auto; -moz-border-radius: 50%; -webkit-border-radius: 50%; border-radius: 50%; }

.containers .popup__content { width: 300rpx; height: 300rpx; line-height: 300rpx; background: #FFFFFF; border-radius: 12rpx; text-align: center; }

.containers .popup__content_full { width: 100%; text-align: center; background: #FFFFFF; }

.containers .popup__content_side { width: 300rpx; height: 100%; line-height: 400rpx; background: #ffffff; text-align: center; }

.containers .weui-grids { position: relative; overflow: hidden; }

.containers .weui-grids:before { content: " "; position: absolute; left: 0; top: 0; right: 0; height: 1px; border-top: 1px solid #d9d9d9; color: #d9d9d9; -webkit-transform-origin: 0 0; transform-origin: 0 0; -webkit-transform: scaleY(0.5); transform: scaleY(0.5); }

.containers .weui-grids:after { content: " "; position: absolute; left: 0; top: 0; width: 1px; bottom: 0; border-left: 1px solid #d9d9d9; color: #d9d9d9; -webkit-transform-origin: 0 0; transform-origin: 0 0; -webkit-transform: scaleX(0.5); transform: scaleX(0.5); }

.containers .weui-grid { position: relative; float: left; padding: 20px 10px; width: 33.33333333%; box-sizing: border-box; }

.containers .weui-grid:before { content: " "; position: absolute; right: 0; top: 0; width: 1px; bottom: 0; border-right: 1px solid #d9d9d9; color: #d9d9d9; -webkit-transform-origin: 100% 0; transform-origin: 100% 0; -webkit-transform: scaleX(0.5); transform: scaleX(0.5); }

.containers .weui-grid:after { content: " "; position: absolute; left: 0; bottom: 0; right: 0; height: 1px; border-bottom: 1px solid #d9d9d9; color: #d9d9d9; -webkit-transform-origin: 0 100%; transform-origin: 0 100%; -webkit-transform: scaleY(0.5); transform: scaleY(0.5); }

.containers .weui-grid:active { background-color: #ECECEC; }

.containers .weui-grid__bg { position: relative; float: left; padding: 0px 0px; width: 100%; box-sizing: border-box; }

.containers .weui-grid__icon { width: 32px; height: 32px; margin: 0 auto; }

.containers .weui-grid__icon image { display: block; width: 100%; height: 100%; }

.containers .weui-grid__icon + .weui-grid__label { margin-top: 5px; }

.containers .weui-grid__label { display: block; text-align: center; color: #000; font-size: 14px; white-space: nowrap; text-overflow: ellipsis; overflow: hidden; }

.containers .bottom-bar-btn__small { border-radius: 10rpx; flex: 1; padding: 0 5rpx; text-align: center; margin: 0 20rpx; }

.containers .bottom-bar-btn__small:before, .containers .bottom-bar-btn__small:after { display: none; }

.containers .bottom-bar-btn__small { flex: 0 0 50px; }

.containers .bottom-bar-btn[disabled], .containers .bottom-bar-btn__small[disabled] { color: #000000; }

.containers .icon--share { background-image: url("http://os11g3fl4.bkt.clouddn.com/share_02.png"); background-size: 100%; margin: 0 !important; opacity: 1; }
